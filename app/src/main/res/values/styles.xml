<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/ketju_light_blue</item>
        <item name="colorPrimary">@color/ketju_dark_blue</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@color/ketju_background_color</item>
        <item name="android:textColorHint">@color/ketju_text_color</item>
        <item name="android:textColorPrimary">@color/ketju_text_color</item>
        <item name="colorControlNormal">@color/ketju_text_color</item>
        <item name="colorControlActivated">@color/ketju_text_color</item>
        <item name="colorControlHighlight">@color/ketju_text_color</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:textColor">@color/ketju_white</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/ketju_text_color</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="BoldTextStyle">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">@color/ketju_text_color</item>
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">@color/ketju_text_color</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="TitleTextStyleBlue" parent="TitleTextStyle">
        <item name="android:textColor">@color/ketju_blue</item>
        <item name="android:textSize">34sp</item>
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="DimTextStyle">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/ketju_dark_gray</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="LinkTextStyle">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/ketju_blue</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="BoldTextStyleBlue" parent="BoldTextStyle">
        <item name="android:textColor">@color/ketju_blue</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:textColor">@color/ketju_text_color</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textColorHint">@color/ketju_dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

</resources>
